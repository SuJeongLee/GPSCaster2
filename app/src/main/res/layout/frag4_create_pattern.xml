<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.idis.gpscaster.Frag4_CreatePattern.Frag4_PatternFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:id="@+id/tv_selectday"
        android:hint="ENTER DAY 0~6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/tv_selecttime"
        android:hint="ENTER TIME 0~11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="EXTRACT HOME and  COMPANY "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_homecompany"/>

        <Button
            android:id="@+id/btn_lookupdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Look Up Db"
           />

        <Button
        android:id="@+id/btn_extractpattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extract Pattern "
        />


        <TextView
            android:id="@+id/tv_lookupDb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            />
    </LinearLayout>


</FrameLayout>
